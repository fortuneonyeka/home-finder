<h2 class="text-center m-4">Log in</h2>
<div class="text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:" display-6" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'EMAIL',class:"w-25 p-2 max-width: 100% border-0 shadow-lg p-3 mb-5 bg-white rounded" %>
  </div>

  <div class="field">
    <%= f.label :password, class:" display-6" %><br />
    <%= f.password_field :password, autocomplete: "current-password",placeholder: 'PASSWORD',class:"w-25 p-2 max-width: 100% border-0 shadow-lg p-3 mb-5 bg-white rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log In", class:"btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


