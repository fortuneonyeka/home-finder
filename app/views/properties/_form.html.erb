<%= form_with(model: property) do |form| %>
 <%= render "shared/form-validations", item: @property%>
  <div class="container">
  <div class="form-group">
    <%= form.label :description, style: "display: block", class:"h4" %>
    <%= form.text_field :description, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block", class:"h4" %>
    <%= form.text_field :address, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block", class:"h4" %>
    <%= form.number_field :price , class:"form-control p-3"%>
  </div>
  

  <div class="form-group">
    <%= form.label :rooms, style: "display: block", class:"h4" %>
    <%= form.number_field :rooms, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms, style: "display: block", class:"h4" %>
    <%= form.text_field :bathrooms, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_phone, style: "display: block", class:"h4" %>
    <%= form.number_field :phone , class:"form-control p-3"%>
  </div>

  <div class="form-group">
    <%= form.label :contact_email, style: "display: block", class:"h4" %>
    <%= form.email_field :email , class:"form-control p-3"%>
  </div>

  <div class="form-group">
  <% if @property.image.attached? %>
    <%= image_tag @property.image, style: "width: 200px; display: block"%>
  <% end %>
      <%= form.label :image %>
      <%= form.file_field :image, class:"form-control p-3" %>
   
  </div>

  <div class="form-group text-center">
    <%= form.submit "Save Property", class:"btn btn-lg btn-block btn-success mt-4" %>
  </div>
  </div>
<% end %>
