<%= form_with(model: property) do |form| %>
 <%= render "shared/form-validations"%>
  <div class="container">
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price , class:"form-control p-3"%>
  </div>

  <div class="form-group">
    <%= form.label :rooms, style: "display: block" %>
    <%= form.number_field :rooms, class:"form-control p-3" %>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms, style: "display: block" %>
    <%= form.text_field :bathrooms, class:"form-control p-3" %>
  </div>

  <div class="form-group text-center">
    <%= form.submit "Submit", class:"btn btn-lg btn-block btn-success mt-4 w-50" %>
  </div>
  </div>
<% end %>
