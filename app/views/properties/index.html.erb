<p style="color: green"><%= notice %></p>
<div class="container-fluid">
<h1 class="m-4 text-center">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Descrption</th>
      <th scope="col">Address</th>
      <th scope="col">Price</th>
      <th scope="col">Rooms</th>
      <th scope="col">Bathrooms</th>
    </tr>
  </thead>
        <h2><%= "#{current_account.first_name} You have #{current_account.properties.count} properties" %></h2> <hr>
  <tbody>
  <% @properties.each do |property| %>
      <% if current_account == property.account %>

    <tr>
      <td><%= property.description%></td>
      <td><%= property.address%></td>
      <td>$<%= property.price%></td>
      <td><%= property.rooms%></td>
      <td><%= property.bathrooms%></td>
      <td><%= link_to "Show this property", property, class:"text-success text-decoration-none" %></td>
      <td>  <%= button_to "Delete Property", property, method: :delete, class:"text-danger text-decoration-none " %>
</td>
    </tr>
    <% end %>
      <% end %>
  </tbody>
</table>
<%= link_to "New property", new_property_path, class:" btn btn-outline-success" %>
</div>

