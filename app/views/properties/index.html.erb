<p style="color: green"><%= notice %></p>
<div class="container-fluid">
<h1 class="m-4 text-center">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Price</th>
      <th scope="col">Rooms</th>
      <th scope="col">Bathrooms</th>
    </tr>
  </thead>
  <tbody>
  <% @properties.each do |property| %>
    <tr>
      <td><%= property.name%></td>
      <td><%= property.address%></td>
      <td><%= property.price%></td>
      <td><%= property.rooms%></td>
      <td><%= property.bathrooms%></td>
      <td><%= link_to "Show this property", property, class:"text-success text-decoration-none" %></td>
      <td>  <%= button_to "Delete property", property, method: :delete, class:" btn btn-outline-danger" %>
</td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New property", new_property_path, class:" btn btn-outline-success" %>
</div>

